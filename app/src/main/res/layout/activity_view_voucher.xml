<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/top_panel_view_voucher"

    android:layout_height="80dp">
    <TextView
        android:id="@+id/textView"
        android:fontFamily="@font/sriracha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Khuyến mãi"

        android:textColor="#fff"
        android:textSize="40sp"
        ></TextView>
    <ImageButton
        android:layout_width="50dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/back_to_main_from_view_voucher"
        android:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:src="@drawable/white_arr2"
        android:layout_height="30dp"></ImageButton>
</RelativeLayout>

    <ListView
        android:id="@+id/listViewVoucher"
        android:layout_below="@id/top_panel_view_voucher"
        android:layout_width="match_parent"

        android:paddingHorizontal="5dp"
        tools:listitem="@layout/voucher_item"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"



         />


</RelativeLayout>