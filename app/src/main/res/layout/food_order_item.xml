<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    >


    <ImageView

        android:id="@+id/imageViewFoodOrderItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"

        />

    <TextView
        android:id="@+id/textViewNameFoodOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textStyle="bold"

        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:scrollHorizontally="false"
        android:minLines="2"
        android:layout_marginLeft="15dp"


        android:layout_toRightOf="@id/imageViewFoodOrderItem"
        android:text="Name aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textViewPriceFoodOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"

        android:layout_toRightOf="@+id/imageViewFoodOrderItem"

        android:text="Price"
        android:textSize="15sp"
        />
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFoodOrderItem"
        >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minus"
        android:id="@+id/minus_btn"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:layout_marginRight="20dp"
        ></ImageButton>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:inputType="number"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/number"
            android:gravity="center"
            android:layout_toRightOf="@id/minus_btn"
            android:textSize="20sp"></TextView>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_centerVertical="true"
            android:src="@drawable/plus"
            android:layout_toRightOf="@id/number"
            android:id="@+id/plus_btn"
            ></ImageButton>
    </RelativeLayout>



</RelativeLayout>